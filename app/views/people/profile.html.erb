<h1>People#profile</h1>
<p>Find me in app/views/people/profile.html.erb</p>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<% if user_signed_in? %>
  <span>Здравствуйте, <%= current_user.email %></span>
  <p/>
  <%= link_to 'На главную', main_page_path(@main_page) %>
  <p/>
  <%= link_to 'Выйти', destroy_user_session_path, :method => :delete %>

<p />
<%= link_to 'New Logpost', new_logpost_path %>
  <h1>Listing logposts</h1>

  <table>
  <thead>
    <tr>
      <th>User mail</th>
      <th>Content</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @current_user_logposts.each do |log| %>
      <tr>
        <td><%= log.user_mail %></td>
        <td><%= log.content %></td>
        <td><%= log.date %></td>
        <td><%= link_to 'Show', log %></td>
        <td><%= link_to 'Edit', edit_logpost_path(log) %></td>
        <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>

