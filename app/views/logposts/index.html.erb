<% if user_signed_in? %>
  <span>Здравствуйте, <%= current_user.email %></span>
  <p/>
  <%= link_to 'На главную', main_page_path(@main_page) %>
  <p/>
  <%= link_to 'Выйти', destroy_user_session_path, :method => :delete %>

<table>
  <thead>
    <tr>
      <th>User mail</th>
      <th>Content</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @logposts.each do |logpost| %>
      <tr>
        <td><%= logpost.user_mail %></td>
        <td><%= logpost.content %></td>
        <td><%= logpost.date %></td>
        <td><%= link_to 'Show', logpost %></td>
        <td><%= link_to 'Edit', edit_logpost_path(logpost) %></td>
        <td><%= link_to 'Destroy', logpost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Logpost', new_logpost_path %>

<% end %>
